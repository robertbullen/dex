{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"lib": ["ES2022"],
		"module": "ES2022",
		"moduleResolution": "node",
		"noUncheckedIndexedAccess": true,
		"skipDefaultLibCheck": true,
		"skipLibCheck": false,
		"strict": true,
		"target": "ES2022",
		"typeRoots": ["./src/typings", "./node_modules/@types"]
	},
	"include": ["./dex.ts", "./src/scripts/*.ts", "./src/**/*.test.ts"],
	"ts-node": {
		"esm": true
	}
}
